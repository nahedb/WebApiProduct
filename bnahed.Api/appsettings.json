{
    "Logging": {
        "LogLevel": {
            "Default": "Error",
            "Microsoft.AspNetCore": "Warning"
        },
        "Debug": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft.Hosting": "Trace"
            }
        },
        "EventSource": {
            "LogLevel": {
                "Default": "Warning"
            }
        },
        "Console": {
            "IncludeScopes": true,
            "LogLevel": {
                "Microsoft.Extensions.Hosting": "Warning",
                "Default": "Information"
            }
        }
    },
    "AllowedHosts": "*",
    "MongoDB": {
        "ConnectionUri": "mongodb://localhost:27017",
        "DatabaseName": "Main",
        "CollectionName": "WeatherHistory"
    },
    "CosmoDB": {
        "ConnectionUri": "https://bnahed-db.documents.azure.com:443/",
        "DatabaseName":  "bnahed-db"
    }
}
